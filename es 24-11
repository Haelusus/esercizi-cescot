        "eta" => 23
    ),
    array(
        "nome" => "filippo",
        "eta" => 28
    ),
    array(
        "nome" => "giulia",
        "eta" => 20
    ),
    
];

/**per ogni persona maggiorenne stampare il nome */
for($i=0;$i<count($persone);$i++):
    if ($persone == $maggiorenne):
        $somma += $maggiorenne[$i];
    endif;
endfor;

